@model MyProject.Models.ViewModels.DocumentsViewModel
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@if (ViewBag.Message != null)
{ 
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}
@using (Html.BeginForm("Save","Document",FormMethod.Post,new { enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group">
                @Html.LabelFor(d => d.Document1)
                @Html.TextBoxFor(d => d.Document1, new {@class = "form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(d => d.Document1, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Document2)
                @Html.TextBoxFor(d => d.Document2, new { @class = "form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(d => d.Document2, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Bond)
                @Html.TextBoxFor(d => d.Bond, new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Bond, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="text-align:right;">
                <input type="submit" class="btn btn-success" value="save" />
            </div>

        </div>
    </div>
}


